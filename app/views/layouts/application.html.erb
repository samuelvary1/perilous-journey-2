<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

	<% if flash[:notice] %>
		<div class="alert alert-dismissible alert-success">
		  <a href class="close" data-dismiss="alert">x</a>
		  <strong><%= flash[:notice] %></strong>
		</div>
	<% elsif flash[:alert] %>
	
		<div class="alert alert-dismissible alert-danger">
		  <a href class="close" data-dismiss="alert">x</a>
			<strong><%= flash[:alert] %></strong>
		</div>

  <% end %>

  <title>JOURNEY</title>

	<div class="container-fluid">

		<% if logged_in? %>
			<h5><%= current_user.email %>
			<%= link_to "Log Out", log_out_path, method: :destroy, class: 'btn btn-warning btn-xs', style: 'margin-bottom: 10px; float: right;' %></h5>
		<% else %>
			<h5><%= link_to "Sign Up", sign_up_path %> |
			<%= link_to "Log In", new_session_path %></h5>
		<% end %>
	</div>


	<% if @location.nil? %>

		<% yield %>
	
	<% end %>

	<% unless @location.nil? %>
	
	<div class="container-fluid">
		<% if @location.id == 1 %>
			<title>Chapter 1: The Apartment</title>
			<h2>Chapter 1: The Apartment</h2>
		<% elsif @location.id == 2 %>
			<title>Chapter 2: The Street</title>
			<h2>Chapter 2: The Street</h2>
		<% elsif @location.id == 3 %>
			<title>Chapter 3: The Edge of Town</title>
			<h2>Chapter 3: Edge of Town</h2>
		<% elsif @location.id == 4 %>
			<title>Chapter 4: The Bunker</title>
			<h2>Chapter 4: The Bunker</h2>
		<% end %>
		
	</div>
		<%= render "layouts/navbar" %>

	<% end %>

</head>
<body>

<% if @location.nil? %>

<% yield %>

<% end %>

<%= yield %>

</body>
</html>
