<% unless @character.items.empty? %>

<div class="container-fluid">
	<h3>You are currently holding:</h3>
</div>

<div class="col-lg-4">
	<div class="list-group">
		<% @character.items.each do |item| %>

			<a href="#" class="list-group-item"><strong><%= item.name.capitalize %>:</strong> <%= item.description %></a>

			<% end %>

	</div>
</div>

	<% else %>

<div class="container-fluid">
	<p>You are not currently holding anything.</p>
</div>

<% end %>


